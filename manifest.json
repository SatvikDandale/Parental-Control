{

	"manifest_version": 2,
	"name": "Chrome Extension",
	"version": "0.1",
	"permissions": ["tabs", "storage", "identity"],
	"content_scripts":[
		{

			"matches": [
				"<all_urls>"
			],
			"js": ["content.js"]

		}

	],
	"background":{
		"scripts": [
			"FireBaseCore/firebase-app.js",
			"FireBaseCore/firebase-auth.js",
			"FireBaseCore/firebase-database.js",
			"FireBaseCore/firebase-firestore.js",
			"updating_firebase.js",
			"background.js",
			"temp.js"
		]
	},
	"browser_action":{
		"default_popup": "popup/login.html"
	},
	"content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; "

}
